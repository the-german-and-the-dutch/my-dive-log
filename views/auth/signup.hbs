<section id="body" class="vh-100 bg-image" style="background-image: url('../images/sharks-portfolio.jpg'); padding-bottom:0;">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-4">
          <div class="card shadow-lg border-0 rounded-15" style="width: 400px; height: 600px; margin-top: 80px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>
              <form action="/auth/signup" method="POST">
                <div class="form-outline mb-2">
                  <input type="text" name="username" class="form-control form-control-lg" />
                  <label class="form-label">Your Name</label>
                </div>
                <div class="form-outline mb-2">
                  <input type="email" name="email" class="form-control form-control-lg" />
                  <label class="form-label">Your Email</label>
                </div>
                <div class="form-outline mb-2">
                  <input type="password" name="password" class="form-control form-control-lg" />
                  <label class="form-label">Password</label>
                </div>
                <div class="d-flex justify-content-center">
                  <button type="submit" name="signup" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                </div>
              </form>
              <p class="text-center mt-5 mb-0">Have already an account? <a href="/auth/login" class="fw-bold text-body"><u>Login here</u></a></p>
              {{#if errorMessage}}
              <p class="error">{{errorMessage}}</p>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
