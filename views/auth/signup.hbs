<section class="vh-80 bg-image" style="background-image: url('../images/sharks-portfolio.jpg');">
  <div class="mask d-flex align-items-center h-80 gradient-custom-3">
    <div class="container h-80">
      <div class="row  d-flex justify-content-center align-items-center h-80">
        <div class="col-12 col-md-8 col-lg-6 col-xl-4">
          <div class="card" style="border-radius: 15px; width: 400px; height: 600px; margin-top: 80px">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form action="/auth/signup" method="POST">

                <div class="form-outline mb-4" style="font-size: 14px;">
                  <input type="text" id="form3Example1cg" class="form-control" style="font-size: 14px;" />
                  <label class="form-label" for="form3Example1cg" style="font-size: 14px;">Your Name</label>
                </div>

                <div class="form-outline mb-4" style="font-size: 14px;">
                  <input type="email" id="form3Example3cg" class="form-control form-control-lg"
                    style="font-size: 14px;" />
                  <label class="form-label" style="font-size: 14px;">Your Email</label>
                </div>

                <div class="form-outline mb-4" style="font-size: 14px;">
                  <input type="password" name="password" class="form-control form-control-lg"
                    style="font-size: 14px;" />
                  <label class="form-label" for="form3Example4cg" style="font-size: 14px;">Password</label>
                </div>

                <div class="form-outline mb-4" style="font-size: 14px;">
                  <input type="password" name="password" class="form-control form-control-lg"
                    style="font-size: 14px;" />
                  <label class="form-label" for="form3Example4cdg" style="font-size: 14px;">Repeat your password</label>
                </div>


                <div class="d-flex justify-content-center">
                  <button type="button" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"
                    style="font-size: 14px;">Register</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0" style="font-size: 14px;">Have already an account? <a
                    href="/auth/login" class="fw-bold text-body" style="font-size: 14px;"><u>Login here</u></a></p>




                {{#if errorMessage}}
                <p class="error">{{errorMessage}}</p>
                {{/if}}


              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>