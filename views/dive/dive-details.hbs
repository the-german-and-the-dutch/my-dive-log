        <section class="page-section pt-6 pb-0 mt-6 mb-0" >
            <div class="container px-4 px-lg-5">
                <h2 class="text-center mt-0">The details</h2>
                <hr class="divider" />
                <div class="row gx-4 gx-lg-5">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            <div class="mb-1"><i class="bi-pin-map-fill fs-1 text-primary"></i></div>
                           
                            <h3 class="h4 mb-2" > {{dive.location}} </h3>
                            <p class="text-muted mb-0"> Location: </p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            <div class="mb-2"><i class="bi bi-calendar3 fs-1 text-primary"></i></div>
                            
                            <h3 class="h4 mb-2"> {{dive.date}} </h3>
                            <p class="text-muted mb-0"> Date:</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            <div class="mb-2"><i class="bi bi-droplet fs-1 text-primary"></i></div>
                            <h3 class="h4 mb-2"> {{dive.diveNumber}} </h3>
                            <p class="text-muted mb-0"> Dive number:</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            <div class="mb-2"><i class="bi bi-eye fs-1 text-primary"></i></div>
                            <h3 class="h4 mb-2"> {{dive.visibility}} </h3>
                            <p class="text-muted mb-0"> Visibility: </p>
                        </div>
                    </div>
                   
                   
        </section>
       <section class="page-section pt-0 pb-0 mt-0 mb-0">
            <div class="container  px-4 px-lg-5">
                
                <div class="row gx-4 gx-lg-5">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            <div class="mb-1"><i class="bi bi-battery-full fs-1 text-primary"></i></div>
                           
                            <h3 class="h4 mb-2" >  </h3>
                            <p class=" mb-0"> 
                                Air start: {{dive.airStart}} Psi <br>
                            Air out: {{airEnd}} Psi </p>
                        </div>
                    </div>
            <div class="col-lg-3 col-md-6 text-center">
                        <div class="mt-5">
                            <div class="mb-0"><i class="bi bi-stopwatch fs-1 text-primary"></i></div>
                            <h3 class="h4 mb-2">  </h3>
                            <p class=" mb-0"> 
                                Time in: {{dive.timeIn}} <br>
                            Time out: {{dive.timeOut}} <br>
                            Bottom time: {{dive.bottomTime}} </p>
                        </div>
                        </div>     

            <div class="col-lg-3 col-md-8 text-center">
                        <div class="mt-5">
                            <div class="mb-1"><i class="bi bi-chat-left fs-1 text-primary"></i></div>
                           
                            <h3 class="h4 mb-2" > {{dive.comment}} </h3>
                            <p class=" mb-0"></p>
                        </div>
                    </div>
