<h1>Hello {{user.username}} </h1>

<form method="post" action="/dive">
    <label>
        Location: {{dive.location}}
        <input type="text" name="location" />
    </label>
    <label>
        Date:
        <input type="date" name="date" />
    </label>
    <label>
        Dive number:
        <input type="number" name="diveNumber" />
    </label>

    <label> time in:
        <input type="time" name="timeIn">
    </label>
    <label> time out:
        <input type="time" name="timeOut">
    </label>
    <label>
        Bottom time:
        <input type="number" name="bottomTime">
    </label>
    <label>
        Depth:
        <input type="number" name="depth">
    </label>
    <label>
        Air start:
        <input type="number" name="airStart">
    </label>
    <label>
        Air end:
        <input type="number" name="airEnd">
    </label>
    <form method="post">
        <label for="visibility">Visibility:</label>
        <select name="visibility" id="visibility">
            <option value="Very Good">Very Good</option>
            <option value="Good">Good</option>
            <option value="Okay">Okay</option>
            <option value="Bad">Bad</option>
            <option value="Very Bad">Very Bad</option>
        </select>
        
        <label>
            Comment:
            <textarea name="comment" cols="30" rows="4"> </textarea>
        </label>
        <input type="submit" value="Create log"> </input>
    </form>