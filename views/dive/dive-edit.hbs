<!-- Bootstrap CSS -->
 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" 
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"> 
<link rel="stylesheet" href="/stylesheets/diveEdit.css" />

<section class="d-flex mt-5 justify-content-center" "vh-100 bg-image"  style=" padding-bottom:0;">
    
    <form method="post" action="/dive/{{dive._id}}/dive-edit" class="col-med-12">

        <body>

            <label>
                <input type="hidden" name="userId" value="{{ _id }}">
            </label>

            {{!-- <div class="form-row"> --}}
                {{!-- <div class="form-group col-md-4"> --}}
                    {{!-- <label for="inputName">Name</label> --}}
                    {{!-- <input type="text" name="username" class="form-control" id="inputName" --}}
                        {{!-- value="{{ user.username }}" size="50"> --}}
                {{!-- </div> --}}


                <div class="form-group col-md-4">
                    <label for="inputLocation">Location</label>
                    <input type="text" name="location" class="form-control" id="inputLocation"
                        value="{{ dive.location }}" size="50">
                </div>

                <div class="form-group col-md-4">
                    <label for="inputDate">Date</label>
                    <input type="date" name="date" class="form-control" id="inputDate" value="{{ dive.date }}" size="3">
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="bottomTime">Dive number</label>
                        <input type="number" name="diveNumber" value="{{ dive.diveNumber }}" class="form-control"
                            id="diveNumber">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputTimeIn">Time in</label>
                            <input type="time" name="timeIn" value="{{ dive.timeIn }}" class="form-control" id="timeIn">
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="inputTimeOut">Time out</label>
                                <input type="time" name="timeOut" value="{{ dive.timeOut }}" class="form-control"
                                    id="timeOut">
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="bottomTime">Bottom time</label>
                                    <input type="number" name="bottomTime" value="{{ dive.bottomTime }}"
                                        class="form-control" id="bottomTime">
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label for="depth">Depth</label>
                                        <input type="number" name="depth" value="{{ dive.depth }}" class="form-control"
                                            id="depth">
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="airStart">Air start</label>
                                            <input type="number" name="airStart" value="{{ dive.airStart }}"
                                                class="form-control" id="airStart">
                                        </div>

                                        <div class="form-row">
                                            <div class="form-group col-md-4">
                                                <label for="airEnd">Air end</label>
                                                <input type="number" name="airEnd" value="{{ dive.airEnd }}"
                                                    class="form-control" id="airEnd">
                                            </div>

                                            <div class="form-group col-md-4">
                                                <label for="inputVisibility">Visibility</label>
                                                <select id="inputVisibility" class="form-control" name="visibility">
                                                    <option selected>Choose...</option>
                                                    <option value="Very Good">Very Good</option>
                                                    <option value="Good">Good</option>
                                                    <option value="Okay">Okay</option>
                                                    <option value="Bad">Bad</option>
                                                    <option value="Very Bad">Very Bad</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label for="comment">Comment</label>
                                                <textarea class="form-control" placeholder="{{dive.comment}}"
                                                    id="exampleFormControlTextarea1" rows="3"></textarea>
                                            </div>

                    <input id="submitBtn"  type="submit" class="btn btn-primary" value="Submit Changes"> </input>
                    <button id="goBackBtn" type="submit" class="btn btn-dark" value="Go Back">Go Back </button>
                  </form>    
                    <form id="deleteBtn"  method="post" type="submit" class="btn btn-danger" action="/dive/{{dive._id}}/delete">
                         <input type="hidden" name="deleteMethod" value="DELETE"> DELETE </input>
                            {{!-- <button type="submit">Delete</button> --}}
                            </form>
                        </section>
</body>



    
  








